pipeline{
    agent any
    tools{
        maven 'maven'
    }
    options {
        buildDiscarder logRotator(artifactDaysToKeepStr: '', artifactNumToKeepStr: '', daysToKeepStr: '', numToKeepStr: '3')
    }
    environment {
        dockerhub_cred = credentials('dockerhub_cred')
        //aws_cred = credentials('aws-ID')

    }
    stages{
        stage('Cleanup') {
            steps {
                cleanWs()
            }
        }
        stage('Checkout stage'){
            steps{
                checkout([$class: 'GitSCM',
                branches: [[name: 'main']],  
                extensions: [[$class: 'CleanCheckout']],
                userRemoteConfigs: [[url: 'https://github.com/jadugarmjadugar/Projects-star/star-agile-insurance-project.git']]])
            }
        }
         stage('build') {
            steps {
                sh 'mvn clean package'
            }
        }
        
        stage('docker'){
            steps{
                sh 'docker build -t jadugarmjadugar/insuranceproject:1.0 .'
            }
        }
        stage('docker push'){
            steps{
                    sh 'echo $dockerhub_cred_PSW | docker login -u $dockerhub_cred_USR --password-stdin'
                    sh 'docker push jadugarmjadugar/insuranceproject:1.0'
            }
        }
    }

}
